<div class="row justify-content-between">
    <div class="col-4">
      <%= link_to "<i class='fa fa-plus'></i> Registrar estado".html_safe, new_assignation_status_path( d_type: params[:d_type] ),
        remote: true, 
        class: 'btn u-btn-outline-indigo u-btn-hover-v1-2 mb-2' %>
    </div>
  </div>

<%= render( partial: 'shared/table', 
            locals: { table_id: 'assignation_statuses', 
                      color: 'teal', 
                      icon: 'fa-gear',
                      title: "Lista de estados", 
                      col_names: [ 'Nombre', 'DescripciÃ³n', 'Acciones' ] }) %>

<!-- Modal para eliminar assignation_status -->
<div class="modal fade" id="modal-disable-assignation-status" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Â¿ Esta seguro de dar de baja este trabajo ?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with(url: disable_assignation_status_path, id: 'form-disable-assignation_status') do |form| %>
          <%= form.hidden_field :assignation_status_id %>
          <%= form.submit 'Eliminar', class: 'btn u-btn-red g-mr-10' %>
          <button type="button" class="btn u-btn-teal g-mr-10" onclick="close_modal('modal-disable-assignation-status')"> Cerrar </button>
        <% end %>
      </div>
    </div>
  </div>
</div>
<!-- Fin modal eliminar assignation_status -->