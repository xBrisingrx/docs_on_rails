form_new_person = $('#form-person')
	form_new_person.validate({
	  rules: {
	    'person[file]': {
	      number: true,
	      remote: {
	        url: "/person_dato_disponible",
	        type: "GET",
	        data: {
	              value: function() {
	                return $('#person_file').val()
	              },
	              attribute: function() {
	                  return 'file'
	              },
	              person_id: function() {
	                return $('#person_id').val()
	              },
	              authenticity_token: function(){
	              	return $("input[name='authenticity_token']").val()
	              }
	        }
	      }
	    },
      'person[name]': {
        required: true,
        minlength: 3,
        alfanumOespacio: true
      },
      'person[last_name]': {
        required: true,
        minlength: 3,
        alfanumOespacio: true
      },
      'person[dni]': {
        required: true,
