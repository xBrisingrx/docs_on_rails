<h1>Listado de vehiculos asignados</h1>
<div class="row justify-content-between">
  <div class="col-4">
    <%= link_to "<i class='fa fa-plus'></i> Asignar vehiculo".html_safe, new_vehicles_cost_center_path(),
          remote: true, 
          class: 'btn u-btn-outline-indigo u-btn-hover-v1-2 mb-2' %>
  </div>
  <div class="col-4">
    <%= link_to "<i class='fa fa-circle-o-notch'></i> Ver estados".html_safe, 
          assignation_statuses_path( d_type: :vehicles ),
          remote: true, 
          class: 'btn u-btn-outline-blue u-btn-hover-v1-2 mb-2' %>
  </div>
</div>


<%= render( partial: 'shared/table', 
            locals: { table_id: 'vehicles_cost_centers', 
                      color: 'blue', 
                      icon: 'fa-gear',
                      title: "", 
                      col_names: [ 'Interno', 'Dominio', 'Estado', 'Empresa', 'Centro de costo', 'Subcentro', 'Operadora','Cliente', 'Desde', 'Hasta' ] }) %>

<!-- Modal para eliminar cost_center -->
<div class="modal fade" id="modal-disable-cost_center" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Â¿ Esta seguro de dar de baja este centro de costos ?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with(url: disable_cost_center_path, id: 'form-disable-cost_center') do |form| %>
          <%= form.hidden_field :cost_center_id %>
          <%= form.submit 'Eliminar', class: 'btn u-btn-red g-mr-10' %>
          <button type="button" data-dismiss="modal" class="btn u-btn-teal g-mr-10"> Cerrar </button>
        <% end %>
      </div>
    </div>
  </div>
</div>
<!-- Fin modal eliminar cost_center -->

